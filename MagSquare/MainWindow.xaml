        <TextBox x:Name="Name_t" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="400" Height="50" FontSize="36" Margin="0,199,0,0"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,146,0,0" TextWrapping="Wrap" Text="Введите  ваше имя" VerticalAlignment="Top" Height="41" Width="400" FontSize="36" TextAlignment="Center"/>

    </Grid>
