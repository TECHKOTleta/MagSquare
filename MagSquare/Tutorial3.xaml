        <TextBox x:Name="Cl8" HorizontalAlignment="Left" Margin="59,167,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" Height="50" BorderBrush="Black" Text="0" FontSize="36" TextAlignment="Center"/>
        <TextBox x:Name="Cl9" HorizontalAlignment="Left" Margin="109,167,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" Height="50" BorderBrush="Black" Text="7" FontSize="36" TextAlignment="Center"/>
        <Button x:Name="Next_button" Content="Далее" HorizontalAlignment="Left" Margin="625,354,0,0" VerticalAlignment="Top" Height="50" Width="150" Click="Next_Click"/>
        <TextBlock x:Name="Hint2_text" HorizontalAlignment="Left" Margin="164,67,0,0" TextWrapping="Wrap" Text="...а после этого умножить его на одно число, например на 2." VerticalAlignment="Top" Height="25" Width="626" FontSize="18"/>
        <TextBox x:Name="Cl1_Copy" HorizontalAlignment="Left" Margin="9,254,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" Height="50" BorderBrush="Black" Text="2" FontSize="36" TextAlignment="Center"/>
        <TextBox x:Name="Cl2_Copy" HorizontalAlignment="Left" Margin="59,254,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" Height="50" BorderBrush="Black" Text="16" FontSize="36" TextAlignment="Center"/>
        <TextBox x:Name="Cl3_Copy" HorizontalAlignment="Left" Margin="109,254,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" Height="50" BorderBrush="Black" Text="6" FontSize="36" TextAlignment="Center"/>
        <TextBox x:Name="Cl4_Copy" HorizontalAlignment="Left" Margin="9,304,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" Height="50" BorderBrush="Black" Text="12" FontSize="36" TextAlignment="Center"/>
        <TextBox x:Name="Cl5_Copy" HorizontalAlignment="Left" Margin="59,304,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" Height="50" BorderBrush="Black" Text="8" FontSize="36" TextAlignment="Center"/>
