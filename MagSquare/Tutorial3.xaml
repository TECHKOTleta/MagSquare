        <TextBox x:Name="Cl9_Copy" HorizontalAlignment="Left" Margin="109,354,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" Height="50" BorderBrush="Black" Text="14" FontSize="36" TextAlignment="Center"/>
        <TextBlock x:Name="Three_text" HorizontalAlignment="Left" Margin="10,220,0,0" TextWrapping="Wrap" Text="* 2" VerticalAlignment="Top" Height="25" Width="149" FontSize="22" TextAlignment="Center"/>
        <Button x:Name="GoToStep_button" Content="Попробовать решать" HorizontalAlignment="Center" Margin="0,354,0,0" VerticalAlignment="Top" Height="50" Width="200" Click="GoToStep_button_Click"/>

