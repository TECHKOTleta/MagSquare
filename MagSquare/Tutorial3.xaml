        <TextBox x:Name="Cl5" HorizontalAlignment="Left" Margin="59,117,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" Height="50" BorderBrush="Black" Text="4" FontSize="36" TextAlignment="Center"/>
