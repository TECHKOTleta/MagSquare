<Window x:Class="MagSquare.Tutorial3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MagSquare"
        mc:Ignorable="d"
        Title="Tutorial3" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="Этот этап очень похож на прошлый, но теперь мы будем работать с умножением. Сначала опять нужно будет заполнить обычный магический квадрат,  возьмём  для примера квадрат с суммой 12." VerticalAlignment="Top" Height="57" Width="780" FontSize="16"/>
        <TextBox x:Name="Cl1" HorizontalAlignment="Left" Margin="9,67,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" Height="50" BorderBrush="Black" Text="1" FontSize="36" TextAlignment="Center"/>
        <TextBox x:Name="Cl2" HorizontalAlignment="Left" Margin="59,67,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" Height="50" BorderBrush="Black" Text="8" FontSize="36" TextAlignment="Center"/>
        <TextBox x:Name="Cl3" HorizontalAlignment="Left" Margin="109,67,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" Height="50" BorderBrush="Black" Text="3" FontSize="36" TextAlignment="Center"/>
