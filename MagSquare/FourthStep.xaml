        <TextBox x:Name="Cl4" HorizontalAlignment="Left" Margin="15,156,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" Height="50" BorderBrush="Black" FontSize="36" TextAlignment="Center" Background="#FFFFFFFA"/>
        <TextBox x:Name="Cl5" HorizontalAlignment="Left" Margin="65,156,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" Height="50" BorderBrush="Black" FontSize="36" TextAlignment="Center" Background="#FFFFFFFA"/>
        <TextBox x:Name="Cl6" HorizontalAlignment="Left" Margin="115,156,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" Height="50" BorderBrush="Black" FontSize="36" TextAlignment="Center" Background="#FFFFFFFA"/>
        <TextBox x:Name="Cl7" HorizontalAlignment="Left" Margin="15,206,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" Height="50" BorderBrush="Black" FontSize="36" TextAlignment="Center" Background="#FFFFFFFA"/>
        <TextBox x:Name="Cl8" HorizontalAlignment="Left" Margin="65,206,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" Height="50" BorderBrush="Black" FontSize="36" TextAlignment="Center" Background="#FFFFFFFA"/>
        <TextBox x:Name="Cl9" HorizontalAlignment="Left" Margin="115,206,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" Height="50" BorderBrush="Black" FontSize="36" TextAlignment="Center" Background="#FFFFFFFA"/>
        <TextBox x:Name="Cl1_2" HorizontalAlignment="Left" Margin="622,106,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" Height="50" BorderBrush="Black" FontSize="36" TextAlignment="Center" Background="#FFFFFFFA"/>
        <TextBox x:Name="Cl2_2" HorizontalAlignment="Left" Margin="672,106,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" Height="50" BorderBrush="Black" FontSize="36" TextAlignment="Center" Background="#FFFFFFFA"/>
