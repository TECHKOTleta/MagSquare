        <TextBox x:Name="Cl6_2" HorizontalAlignment="Left" Margin="722,156,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" Height="50" BorderBrush="Black" FontSize="36" TextAlignment="Center" Background="#FFFFFFFA"/>
        <TextBox x:Name="Cl7_2" HorizontalAlignment="Left" Margin="622,206,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" Height="50" BorderBrush="Black" FontSize="36" TextAlignment="Center" Background="#FFFFFFFA"/>
        <TextBox x:Name="Cl8_2" HorizontalAlignment="Left" Margin="672,206,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" Height="50" BorderBrush="Black" FontSize="36" TextAlignment="Center" Background="#FFFFFFFA"/>
        <TextBox x:Name="Cl9_2" HorizontalAlignment="Left" Margin="722,206,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" Height="50" BorderBrush="Black" FontSize="36" TextAlignment="Center" Background="#FFFFFFFA"/>

    </Grid>
</Window>
